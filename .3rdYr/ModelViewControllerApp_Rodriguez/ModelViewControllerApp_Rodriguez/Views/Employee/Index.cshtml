@model ModelViewControllerApp_Rodriguez.Models.Employee

<h2>Employee Input</h2>
<form asp-action="Calculate" method="post">
    <div>
        <label>Last Name:</label>
        <input asp-for="LastName" />
    </div>
    <div>
        <label>First Name:</label>
        <input asp-for="FirstName" />
    </div>
    <div>
        <label>City:</label>
        <input asp-for="City" />
    </div>
    <div>
        <label>Daily Rate:</label>
        <input asp-for="DailyRate" type="number" step="0.01" />
    </div>
    <div>
        <label>Days Worked:</label>
        <input asp-for="DaysWorked" type="number" />
    </div>
    <button type="submit">Calculate</button>
</form>