        android:layout_marginTop="280dp"
        android:background="@null"
        android:ems="10"
        android:gravity="center"
        android:hint="0"
        android:inputType="number"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/editDigit3"
