<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.regular_loan.RegularLoanFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Icon -->

        <!-- Logo -->

        <!-- Regular Loan Text -->

        <!-- Loan Amount Input -->

        <!-- Months to Pay Input -->

        <ImageView
            android:id="@+id/logo"
            android:layout_width="162dp"
            android:layout_height="98dp"
            android:contentDescription="DRD Logo"
            android:src="@drawable/drd_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2" />

        <TextView
            android:id="@+id/regular_loan_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Regular Loan"
            android:textColor="#003366"
            android:textSize="16sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/basic_salary_input"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/txtfieldsalary"
            android:hint="Enter Salary Amount"
            android:inputType="number"
            android:padding="10dp"
            android:paddingLeft="30px"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/months_to_pay_input"
            app:layout_constraintStart_toStartOf="@+id/months_to_pay_input"
            app:layout_constraintTop_toBottomOf="@id/regular_loan_text"
            app:layout_constraintWidth_percent="0.8" />

        <EditText
            android:id="@+id/months_to_pay_input"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/txtmonths2pay"
            android:hint="Enter number of months"
            android:inputType="number"
            android:padding="10dp"
            android:paddingLeft="30px"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/btnApply_Rloan"
            app:layout_constraintStart_toStartOf="@+id/btnApply_Rloan"
            app:layout_constraintTop_toBottomOf="@+id/basic_salary_input"
            app:layout_constraintWidth_percent="0.8" />

        <!-- Apply Button -->
        <Button
            android:id="@+id/btnApply_Rloan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#0056b3"
            android:text="Apply"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/months_to_pay_input"
            app:layout_constraintWidth_percent="0.6" />

        <ImageButton
            android:id="@+id/btnBack_Rloan"
            android:layout_width="15dp"
            android:layout_height="24dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="60dp"
            android:alpha="0.75"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>